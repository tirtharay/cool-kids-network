<?xml version="1.0"?>
<ruleset name="Cool Kids Network Coding Standards">
    <description>PHP CodeSniffer configuration for Cool Kids Network.</description>

    <!-- Use the WordPress coding standard -->
    <rule ref="WordPress" />

    <!-- Directories and files to ignore -->
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>build/*</exclude-pattern>
    <exclude-pattern>.gitignore</exclude-pattern>
    <exclude-pattern>.editorconfig</exclude-pattern>
    <exclude-pattern>package-lock.json</exclude-pattern>
    <exclude-pattern>package.json</exclude-pattern>
</ruleset>
